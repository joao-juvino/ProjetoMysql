<form action="/cadpostagem" method="post">
    <div class="mb-3">
        <label for="texto" class="form-label">Título da postagem</label>
        <input type="text" name="titulo" class="form-control" id="texto" aria-describedby="textHelp">
        <div id="textHelp" class="form-text">Escolha um título curto e descritivo</div>
    </div>
    <div class="mb-3">
        <label for="conteudo" class="form-label">Conteúdo da postagem</label>
        <textarea name="conteudo" class="form-control" id="conteudo" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar postagem</button>
</form>